<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        >

        <ImageView
            android:id="@+id/item_fav_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/test" />

        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/item_fav_image_blur"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            app:realtimeBlurRadius="20dp"
            app:realtimeOverlayColor="#25FFFFFF" />

        <ImageView
            android:id="@+id/item_fav_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/fav_button" />

        <TextView
            android:id="@+id/item_fav_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_fav_image_blur"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:text="Tenet"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>